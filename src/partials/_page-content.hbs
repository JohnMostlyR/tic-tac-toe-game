<main class="c-main">
  <section class="c-ttt">
    <div class='control'>
      <!-- div.intial displays the starting controls -->
      <div class='initial'>
        <div class='start'>
          <button id="js-ttt-start">Start</button>
        </div>
      </div>

      <!-- div.ingame displays in-game messages and controls -->
      <div class='ingame' id="human">It's your turn ...</div>
      <div class='ingame' id="robot">
        <p>Wait for it ...</p>
      </div>
      <div class='ingame' id="won">You won !</div>
      <div class='ingame' id="lost">You lost !</div>
      <div class='ingame' id="draw">It's a Draw</div>
    </div>
    <div class="c-ttt__messages">
      <div class="c-ttt__scores">
        <div class="l-rhombus-banner">
          <div class="c-rhombus-banner"></div>
          <div class="c-ornament">
            <div class="c-ornament__string"></div>
            <div class="c-ornament__knot"></div>
            <div class="c-ornament__bobbin"></div>
          </div>
        </div>
        <div class="l-rhombus-banner">
          <div class="c-rhombus-banner"></div>
          <div class="c-ornament">
            <div class="c-ornament__string"></div>
            <div class="c-ornament__knot"></div>
            <div class="c-ornament__bobbin"></div>
          </div>
        </div>
        <output id="js-ttt-show-player-one-score" class="c-ttt__scores--player-one"></output>
        <output id="js-ttt-show-player-two-score" class="c-ttt__scores--player-two"></output>
      </div>
      <output id="js-ttt-show-whose-turn" class="c-ttt__whose-turn"></output>
      <output id="js-ttt-show-result" class="c-ttt__result"></output>
    </div>
    {{> src/partials/_widget-banner }}
    <div class="l-scroll">
      <div class="c-scroll">
        <div class="c-scroll__holder c-scroll__holder--top">
          <div class="c-scroll__knob">
            <div class="c-scroll__knob c-scroll__knob--small c-scroll__knob--left"></div>
          </div>
          <div class="c-scroll__roll c-scroll__roll--top"></div>
          <div class="c-scroll__knob">
            <div class="c-scroll__knob c-scroll__knob--small c-scroll__knob--right"></div>
          </div>
        </div>
        <div class="c-scroll__paper">
          <div class="c-scroll__content">
            <div class="l-board">
              <div id="js-ttt-board" class="c-board">
                <div class="c-board__line c-board__line--top"></div>
                <div class="c-board__line c-board__line--bottom"></div>
                <div class="c-board__line c-board__line--left"></div>
                <div class="c-board__line c-board__line--right"></div>
                <div class="c-board__row">
                  <button type="button" id="js-ttt-btn-0" class="c-board__btn">0</button>
                  <button type="button" id="js-ttt-btn-1" class="c-board__btn">1</button>
                  <button type="button" id="js-ttt-btn-2" class="c-board__btn">2</button>
                </div>
                <div class="c-board__row">
                  <button type="button" id="js-ttt-btn-3" class="c-board__btn">3</button>
                  <button type="button" id="js-ttt-btn-4" class="c-board__btn">4</button>
                  <button type="button" id="js-ttt-btn-5" class="c-board__btn">5</button>
                </div>
                <div class="c-board__row">
                  <button type="button" id="js-ttt-btn-6" class="c-board__btn">6</button>
                  <button type="button" id="js-ttt-btn-7" class="c-board__btn">7</button>
                  <button type="button" id="js-ttt-btn-8" class="c-board__btn">8</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="c-scroll__holder c-scroll__holder--bottom">
          <div class="c-scroll__knob">
            <div class="c-scroll__knob c-scroll__knob--small c-scroll__knob--left"></div>
          </div>
          <div class="c-scroll__roll c-scroll__roll--bottom"></div>
          <div class="c-scroll__knob">
            <div class="c-scroll__knob c-scroll__knob--small c-scroll__knob--right"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="c-candle">
      <div class="c-flame">
        <div class="c-flame__shadows"></div>
        <div class="c-flame__top"></div>
        <div class="c-flame__middle"></div>
        <div class="c-flame__bottom"></div>
      </div>
      <div class="c-candle__wick"></div>
      <div class="c-candle__wax"></div>
    </div>
  </section>
</main>
